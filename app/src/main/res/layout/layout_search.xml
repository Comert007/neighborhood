<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/wwpx20"
                    android:background="@drawable/gray_round_shape">
        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wwpx60"
            android:gravity="center"
            android:hint="搜索"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/wwpx28"/>

        <ImageView android:layout_width="@dimen/wwpx40"
                   android:layout_height="@dimen/wwpx40"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/wwpx40"
                   android:src="@mipmap/ic_search"/>



    </RelativeLayout>
</LinearLayout>