<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/wwpx20"
              android:background="@color/color_white"
              android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/wwpx20">

        <com.coder.neighborhood.widget.IconFontTextView
            android:id="@+id/itv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\ue678"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/wwpx40"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/wwpx20"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/wwpx40"
                  android:paddingTop="@dimen/wwpx40">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingLeft="@dimen/wwpx20">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/gray_border_shape"
                          android:padding="@dimen/wwpx1">
                <ImageView
                    android:id="@+id/iv_goods_image"
                    android:layout_width="@dimen/wwpx220"
                    android:layout_height="@dimen/wwpx220"
                    android:src="@mipmap/pic_default"/>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/wwpx20"
                          android:paddingRight="@dimen/wwpx20">
                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="川香鸡柳早餐各种零食"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx28"/>

                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wwpx30"
                    android:text="数量："
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx26"/>

                <TextView
                    android:id="@+id/tv_goods_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wwpx20"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx26"
                    tools:text="鸡肉/一串6份"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/wwpx26"/>

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_price_symbol"
                        android:textColor="@color/color_yellow"
                        android:textSize="@dimen/wwpx38"
                        tools:text="28.8元/份"/>


                    <com.coder.neighborhood.widget.IconFontTextView
                        android:id="@+id/itv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="\ue615"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="@dimen/wwpx35"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>