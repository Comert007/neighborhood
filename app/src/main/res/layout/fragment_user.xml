<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LlayFill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/wwpx40"
                android:paddingLeft="@dimen/wwpx50"
                android:paddingRight="@dimen/wwpx50"
                android:paddingTop="@dimen/wwpx80"
            >

                <LinearLayout
                    android:id="@+id/ll_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ww.com.core.widget.RoundImageView
                        android:id="@+id/riv_header"
                        android:layout_width="@dimen/wwpx120"
                        android:layout_height="@dimen/wwpx120"
                        android:src="@mipmap/pic_default"
                        app:type="type_circle"/>


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="@dimen/wwpx25"
                                  android:orientation="vertical">

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="昵称"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/wwpx32"/>
                            <TextView
                                android:id="@+id/tv_verified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/yellow_border_shape"
                                android:paddingBottom="@dimen/wwpx5"
                                android:paddingLeft="@dimen/wwpx20"
                                android:paddingRight="@dimen/wwpx20"
                                android:paddingTop="@dimen/wwpx5"
                                android:text="未认证"
                                android:textColor="@color/color_yellow"
                                android:textSize="@dimen/wwpx26"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx10"
                            android:text="LV.7"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/wwpx28"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wwpx40"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_cart"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:layout_width="@dimen/wwpx42"
                                   android:layout_height="@dimen/wwpx42"
                                   android:src="@mipmap/ic_shop_car"/>
                        <TextView
                            style="@style/HomeTextViewStyle"
                            android:layout_marginTop="@dimen/wwpx10"
                            android:text="购物车"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sign"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:layout_width="@dimen/wwpx42"
                                   android:layout_height="@dimen/wwpx42"
                                   android:src="@mipmap/ic_sign_in"/>
                        <TextView
                            style="@style/HomeTextViewStyle"
                            android:layout_marginTop="@dimen/wwpx10"
                            android:text="签到"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_good_friends"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:layout_width="@dimen/wwpx42"
                                   android:layout_height="@dimen/wwpx42"
                                   android:src="@mipmap/ic_friends"/>
                        <TextView
                            style="@style/HomeTextViewStyle"
                            android:layout_marginTop="@dimen/wwpx10"
                            android:text="好友"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="2px"
                  android:background="@color/color_split"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_page_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/wwpx10"
                    android:background="@color/color_white"
                    android:orientation="vertical"
                    android:padding="@dimen/wwpx20">


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_wait_pay"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_pay_money"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待付款"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wait_send"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_send_goods"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待发货"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wait_gain"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_gain_goods"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待收货"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wait_comment"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_comment"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待评价"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_return_goods"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_goback_goods"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="退货"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx10"
                            android:background="@color/color_white"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wwpx10"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx10"
                            android:background="@color/color_white"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的问题"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wwpx10"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/rl_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wwpx10"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_loginout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wwpx20"
                android:layout_marginTop="@dimen/wwpx85"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="@dimen/wwpx20"
                android:text="退出登录"
                android:textColor="@color/color_black"
                android:textSize="@dimen/wwpx32"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>