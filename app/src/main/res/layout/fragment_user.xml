<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LlayFill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white">


    <com.coder.neighborhood.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="个人"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/wwpx277"
                          android:background="@color/color_title_bg"
                          android:gravity="center"
                          android:orientation="vertical">

                <ww.com.core.widget.RoundImageView
                    android:id="@+id/riv_header"
                    android:layout_width="@dimen/wwpx150"
                    android:layout_height="@dimen/wwpx150"
                    android:src="@mipmap/pic_default"
                    app:type="type_circle"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wwpx20"
                    android:text="LV.7 昵称"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx26"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="2px"
                  android:background="@color/color_split"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_page_bg">
                <TextView
                    android:id="@+id/tv_verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/wwpx20"
                    android:background="@drawable/red_round_shape"
                    android:paddingBottom="@dimen/wwpx5"
                    android:paddingLeft="@dimen/wwpx20"
                    android:paddingRight="@dimen/wwpx20"
                    android:paddingTop="@dimen/wwpx5"
                    android:text="未认证"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/wwpx26"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_below="@+id/tv_verified"
                    android:orientation="vertical" android:padding="@dimen/wwpx20">

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_shop_car"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="购物车"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_calendar"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="签到"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_friends"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="好友"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="@dimen/wwpx40"
                                  android:orientation="horizontal">

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_pay_money"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待付款"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_send_goods"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="代发货"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_gain_goods"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待收货"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_comment"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="待评价"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0px"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:gravity="center"
                                      android:orientation="vertical">

                            <ImageView android:layout_width="@dimen/wwpx42"
                                       android:layout_height="@dimen/wwpx42"
                                       android:src="@mipmap/ic_goback_goods"/>
                            <TextView
                                style="@style/HomeTextViewStyle"
                                android:layout_marginTop="@dimen/wwpx10"
                                android:text="退货"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx20"
                            android:background="@color/color_page_bg"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/color_title_text"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>


            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx20"
                            android:background="@color/color_page_bg"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textColor="@color/color_title_text"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx20"
                            android:background="@color/color_page_bg"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的问题"
                    android:textColor="@color/color_title_text"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx20"
                            android:background="@color/color_page_bg"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textColor="@color/color_title_text"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wwpx20"
                            android:background="@color/color_page_bg"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="@color/color_title_text"
                    android:textSize="@dimen/wwpx32"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_loginout"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textSize="@dimen/wwpx32"
                    android:textColor="@color/color_text"
                    android:layout_marginTop="@dimen/wwpx20"
                    android:background="@color/color_page_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/wwpx20"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>