<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/wwpx20"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/wwpx20">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/gray_border_shape"
                      android:padding="@dimen/wwpx1">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/wwpx220"
                android:layout_height="@dimen/wwpx220"
                android:src="@mipmap/pic_default"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingLeft="@dimen/wwpx20"
                      android:paddingRight="@dimen/wwpx20">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/wwpx28"/>

            <TextView
                android:id="@+id/tv_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wwpx30"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/wwpx26"/>

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wwpx20"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/wwpx26"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="ï¿¥"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx26"/>

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_price_symbol"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/wwpx38"/>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>