<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LlayFill">

    <com.coder.neighborhood.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="寻物启事"/>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:background="@color/color_b3b3b3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wwpx322" />

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@color/color_white"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:padding="@dimen/wwpx20"
                      android:gravity="center_vertical"
                      android:layout_height="wrap_content">

            <ww.com.core.widget.RoundImageView
                android:id="@+id/riv"
                android:src="@mipmap/ic_default_avatar"
                android:layout_width="@dimen/wwpx90"
                app:type="type_circle"
                android:layout_height="@dimen/wwpx90"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="@dimen/wwpx20"
                          android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/wwpx30"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:text="联系方式："
                    android:textSize="@dimen/wwpx24"
                    android:layout_marginTop="@dimen/wwpx33"
                    android:textColor="@color/color_999999"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>