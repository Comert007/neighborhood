<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_progress_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/wwpx20">

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/wwpx48"
            android:layout_height="@dimen/wwpx48"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/anim_loading" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wwpx20"
            android:text="@string/dialog_loding"
            android:textColor="@color/color_white" />

    </LinearLayout>

</FrameLayout>