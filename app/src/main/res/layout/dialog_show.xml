<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/wwpx80"
    android:paddingLeft="@dimen/wwpx90"
    android:paddingRight="@dimen/wwpx90"
    android:paddingTop="@dimen/wwpx80">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="温馨提示"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/wwpx30"/>


    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wwpx20"
        android:gravity="center"
        android:maxLines="3"
        android:text="内容"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/wwpx28"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wwpx50"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0px"
            android:layout_height="@dimen/wwpx60"
            android:layout_weight="1"
            android:textColor="@color/color_text"
            android:text="返回"
            android:textSize="@dimen/wwpx30"
            android:layout_marginRight="@dimen/wwpx70"
            android:background="@drawable/green_border_shape"/>


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0px"
            android:layout_height="@dimen/wwpx60"
            android:layout_weight="1"
            android:textColor="@color/color_text"
            android:text="确定"
            android:textSize="@dimen/wwpx30"
            android:background="@drawable/green_border_shape"/>

    </LinearLayout>

</LinearLayout>