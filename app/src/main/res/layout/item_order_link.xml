<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ww.com.core.widget.CustomRecyclerView
        android:id="@+id/crv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/layout_split_fine"/>


    <LinearLayout android:layout_width="match_parent"
                  android:gravity="center"
                  android:layout_marginBottom="@dimen/wwpx20"
                  android:background="@color/white"
                  android:layout_height="wrap_content"
                    android:padding="@dimen/wwpx20">

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0px"
                  android:layout_weight="1"
                  android:text="总价：0"
                  android:textSize="@dimen/wwpx30"
                  android:textColor="@color/color_black"
                  android:gravity="right"
                  android:paddingRight="@dimen/wwpx50"
                  android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_order"
            android:layout_width="@dimen/wwpx193"
            android:layout_height="@dimen/wwpx58"
            android:background="@drawable/yellow_border_shape"
            android:text="待收货"
            android:textColor="@color/color_yellow"/>
    </LinearLayout>
</LinearLayout>