<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LlayFill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.coder.neighborhood.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="发布问题"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/wwpx200"
                  android:background="@color/color_white"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/wwpx40"
                  android:paddingTop="@dimen/wwpx20">

        <include layout="@layout/view_title_split"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="@dimen/wwpx150"
                  android:layout_margin="@dimen/wwpx20"
                  android:background="@drawable/white_border_round_shape"
                  android:gravity="left"
                  android:hint="问题详情"
                  android:padding="@dimen/wwpx20"
                  android:textColor="@color/color_text"
                  android:textColorHint="@color/color_text"
                  android:textSize="@dimen/wwpx32"/>

        <LinearLayout android:layout_width="@dimen/wwpx200"
                      android:layout_height="@dimen/wwpx120"
                      android:layout_margin="@dimen/wwpx20"
                      android:background="@color/color_page_bg"
                      android:gravity="center"
                      android:orientation="vertical">
            <ImageView

                android:layout_width="@dimen/wwpx48"
                android:layout_height="@dimen/wwpx48"
                android:src="@mipmap/ic_add"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="添加图片"
                      android:textColor="@color/color_black"
                      android:textSize="@dimen/wwpx26"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wwpx40"
            android:gravity="center"
            android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="@dimen/wwpx60"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gray_round_shape"
                    android:text="寻物启事"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/wwpx26"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="@dimen/wwpx60"
                    android:layout_marginLeft="@dimen/wwpx90"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gray_round_shape"
                    android:text="失物招领"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/wwpx26"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>