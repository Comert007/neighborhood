<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LlayFill">

    <com.coder.neighborhood.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        app:titleLeftIco="@mipmap/ic_back"
        android:layout_marginBottom="@dimen/wwpx10"
        app:titleText="购物车"/>

    <ww.com.core.widget.CustomSwipeRefreshLayout
        android:id="@+id/csr"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <ww.com.core.widget.CustomRecyclerView
            android:id="@+id/crv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ww.com.core.widget.CustomSwipeRefreshLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/color_white"
                  android:gravity="center_vertical"
                  android:paddingLeft="@dimen/wwpx20"
                  android:paddingRight="@dimen/wwpx20"
                  android:layout_marginTop="@dimen/wwpx10"
                  android:layout_height="@dimen/wwpx98">

        <com.coder.neighborhood.widget.IconFontTextView
            android:id="@+id/itv_whole"
            android:textSize="@dimen/wwpx40"
            android:layout_width="wrap_content"
            android:text="\ue678"
            android:textColor="@color/color_aaaaaa"
            android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/color_666666"
                  android:textSize="@dimen/wwpx24"
                  android:layout_marginLeft="@dimen/wwpx16"
                  android:text="全选"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/color_666666"
                  android:textSize="@dimen/wwpx30"
                  android:layout_marginLeft="@dimen/wwpx20"
                  android:text="合计：0.00"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:gravity="right"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="@dimen/wwpx192"
                      android:gravity="center"
                      android:textColor="@color/color_yellow"
                      android:textSize="@dimen/wwpx30"
                      android:text="结算"
                      android:background="@drawable/yellow_border_shape"
                      android:layout_height="@dimen/wwpx60"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>