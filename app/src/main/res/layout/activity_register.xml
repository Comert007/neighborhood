<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login_page"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wwpx140"
        android:orientation="vertical"
        android:paddingLeft="@dimen/wwpx83"
        android:paddingRight="@dimen/wwpx83">


        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wwpx95"
            android:hint="手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/color_title_text"
            android:textSize="@dimen/wwpx32"
            android:theme="@style/CustomLineColor"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/wwpx95"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/color_title_text"
                android:textSize="@dimen/wwpx32"
                android:theme="@style/CustomLineColor"/>


            <Button
                style="@style/CommitButtonStyle"
                android:layout_width="wrap_content"
                android:text="@string/gain_text_code"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wwpx95"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/color_title_text"
            android:textSize="@dimen/wwpx32"
            android:theme="@style/CustomLineColor"/>

        <Button
            android:id="@+id/btn_request_register"
            style="@style/CommitButtonStyle"
            android:layout_marginTop="@dimen/wwpx15"
            android:text="@string/str_register"/>

    </LinearLayout>

</LinearLayout>