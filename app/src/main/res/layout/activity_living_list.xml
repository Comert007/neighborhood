<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LlayFill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.coder.neighborhood.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="邻里直播"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/wwpx20"
                    android:background="@drawable/gray_round_shape">
        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wwpx60"
            android:gravity="center"
            android:hint="搜索"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/wwpx28"/>

        <ImageView android:layout_width="@dimen/wwpx40"
                   android:layout_height="@dimen/wwpx40"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/wwpx40"
                   android:src="@mipmap/ic_search"/>



    </RelativeLayout>
    <Button
        android:id="@+id/btn_open_living"
        android:layout_marginTop="@dimen/wwpx20"
        android:layout_marginBottom="@dimen/wwpx20"
        android:layout_marginLeft="@dimen/wwpx80"
        android:layout_marginRight="@dimen/wwpx80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wwpx60"
        android:text="我要开播"
        android:textColor="@color/color_white"
        android:textSize="@dimen/wwpx28"
        android:layout_below="@+id/et_search"
        android:background="@drawable/red_round_shape"/>

    <include layout="@layout/layout_refresh"/>


</LinearLayout>