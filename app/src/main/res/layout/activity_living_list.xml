<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LlayFill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.coder.neighborhood.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="邻里直播"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/wwpx20"
                    android:background="@drawable/gray_round_shape">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wwpx60"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="搜索"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/wwpx28"/>

        <ImageView android:layout_width="@dimen/wwpx40"
                   android:layout_height="@dimen/wwpx40"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/wwpx40"
                   android:src="@mipmap/ic_search"/>


    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <include layout="@layout/layout_refresh"/>

        <Button
            android:id="@+id/btn_open_living"
            android:layout_width="@dimen/wwpx88"
            android:layout_height="@dimen/wwpx88"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/wwpx90"
            android:layout_marginRight="@dimen/wwpx20"
            android:layout_marginTop="@dimen/wwpx20"
            android:background="@drawable/yellow_circle_shape"
            android:padding="@dimen/wwpx10"
            android:text="我要开播"
            android:textColor="@color/color_white"
            android:textSize="@dimen/wwpx24"/>
    </RelativeLayout>


</LinearLayout>