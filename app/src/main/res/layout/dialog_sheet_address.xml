<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@color/color_white"
                  android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_show_all"
            android:layout_width="match_parent"
            android:padding="@dimen/wwpx30"
            android:text="显示居住地"
            android:gravity="center"
            android:textSize="@dimen/wwpx28"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content"/>

        <include layout="@layout/layout_split_fine"/>

        <TextView
            android:id="@+id/tv_show_friends"
            android:layout_width="match_parent"
            android:padding="@dimen/wwpx30"
            android:text="对好友显示居住地"
            android:gravity="center"
            android:textSize="@dimen/wwpx28"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content"/>

        <include layout="@layout/layout_split_fine"/>

        <TextView
            android:id="@+id/tv_hide"
            android:layout_width="match_parent"
            android:padding="@dimen/wwpx30"
            android:text="隐藏居住地"
            android:gravity="center"
            android:textSize="@dimen/wwpx28"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_cancel"
        android:background="@color/color_999999"
        android:layout_width="match_parent"
        android:text="取消"
        android:textSize="@dimen/wwpx30"
        android:textColor="@color/color_white"
        android:layout_height="wrap_content"/>

</LinearLayout>