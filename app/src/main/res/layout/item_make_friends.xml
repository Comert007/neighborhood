<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/wwpx20"
    android:layout_height="wrap_content">



    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@color/color_white"
                  android:paddingLeft="@dimen/wwpx20"
                  android:paddingRight="@dimen/wwpx20"
                  android:paddingTop="@dimen/wwpx40"
                  android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ww.com.core.widget.RoundImageView
                android:id="@+id/riv_header"
                android:layout_width="@dimen/wwpx90"
                android:layout_height="@dimen/wwpx90"
                android:src="@mipmap/pic_default"
                app:type="type_circle"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:layout_marginLeft="@dimen/wwpx25"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="@color/color_1d65a2"
                        android:textSize="@dimen/wwpx26"/>

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="match_parent"
                              android:gravity="right"
                              android:textColor="@color/color_999999"
                              android:textSize="@dimen/wwpx26"
                              android:text="LV.15"
                              android:layout_height="wrap_content"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/tv_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wwpx10"
                    android:text="今天给大家解释一下什么是老铁"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/wwpx30"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wwpx16"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/wwpx28"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:gravity="right|center_vertical"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/wwpx40"
                      android:layout_height="wrap_content">


            <ImageView android:layout_width="@dimen/wwpx31"
                       android:src="@mipmap/ic_like"
                       android:layout_height="@dimen/wwpx31"/>

            <TextView
                android:id="@+id/tv_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wwpx10"
                android:text="0"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/wwpx26"/>

            <ImageView
                android:layout_width="@dimen/wwpx40"
                android:src="@mipmap/ic_reply"
                android:layout_marginLeft="@dimen/wwpx54"
                android:layout_height="@dimen/wwpx34"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_comment"
            android:layout_marginTop="@dimen/wwpx40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>