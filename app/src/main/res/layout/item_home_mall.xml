<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/wwpx13"
    android:layout_marginTop="@dimen/wwpx20"
    android:background="@color/color_white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/wwpx20"
        android:layout_height="wrap_content">

        <TextView
            android:text="热门购物"
            android:textSize="@dimen/wwpx32"
            android:layout_width="wrap_content"
            android:textColor="@color/color_black"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="更多 +"
            android:textSize="@dimen/wwpx28"
            android:textColor="@color/color_gray"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/wwpx20"
            android:layout_width="match_parent"
            android:background="@color/color_black"
            android:layout_height="@dimen/wwpx451">


            <RelativeLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/wwpx14"
                            android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/wwpx32"
                    android:text="炙手美食推荐"
                    android:layout_height="wrap_content"/>




            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="65元/份"
                android:layout_margin="@dimen/wwpx14"
                android:textColor="@color/color_yellow"
                android:textSize="@dimen/wwpx36"/>

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:text="舌尖上的美味——川香鸡柳"
            android:textSize="@dimen/wwpx48"
            android:textColor="@color/color_white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>