<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/wwpx383"
                  android:layout_marginTop="@dimen/wwpx20"
                  android:paddingLeft="@dimen/wwpx20"
                  android:paddingRight="@dimen/wwpx20"
                  android:orientation="vertical"
                  android:paddingTop="@dimen/wwpx40"
                  android:paddingBottom="@dimen/wwpx40"
                  android:background="@color/color_white">

        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="大事件"
                      android:textColor="@color/color_666666"
                      android:textSize="@dimen/wwpx34"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentTop="true">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="更多"
                          android:textColor="@color/color_666666"
                          android:textSize="@dimen/wwpx24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx30"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/wwpx40"
                      android:layout_height="match_parent">
            <TextView android:layout_width="0px"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textColor="@color/color_666666"
                      android:text="大事件相关文字"
                      android:background="@color/color_page_bg"
                      android:layout_height="match_parent"/>

            <TextView android:layout_width="0px"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textColor="@color/color_666666"
                      android:text="大事件相关文字"
                      android:layout_marginLeft="@dimen/wwpx20"
                      android:background="@color/color_page_bg"
                      android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/wwpx383"
                  android:layout_marginTop="@dimen/wwpx20"
                  android:paddingLeft="@dimen/wwpx20"
                  android:paddingRight="@dimen/wwpx20"
                  android:orientation="vertical"
                  android:paddingTop="@dimen/wwpx40"
                  android:paddingBottom="@dimen/wwpx40"
                  android:background="@color/color_white">

        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="大事件"
                      android:textColor="@color/color_666666"
                      android:textSize="@dimen/wwpx34"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentTop="true">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="更多"
                          android:textColor="@color/color_666666"
                          android:textSize="@dimen/wwpx24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx30"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/wwpx40"
                      android:layout_height="match_parent">
            <TextView android:layout_width="0px"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textColor="@color/color_666666"
                      android:text="大事件相关文字"
                      android:background="@color/color_page_bg"
                      android:layout_height="match_parent"/>

            <TextView android:layout_width="0px"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textColor="@color/color_666666"
                      android:text="大事件相关文字"
                      android:layout_marginLeft="@dimen/wwpx20"
                      android:background="@color/color_page_bg"
                      android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <ww.com.core.widget.TranslateTabBar
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wwpx80"
        android:layout_marginTop="@dimen/wwpx10"
        android:background="@color/color_white"
        app:text="@array/circle_second_text"
        app:textColor="@color/color_666666"
        app:textSize="@dimen/wwpx30"/>

</LinearLayout>