<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:indicator="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/wwpx383"
                  android:layout_marginTop="@dimen/wwpx20"
                  android:background="@color/color_white"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/wwpx40"
                  android:paddingLeft="@dimen/wwpx20"
                  android:paddingRight="@dimen/wwpx20"
                  android:paddingTop="@dimen/wwpx40">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="大事件"
                      android:textColor="@color/color_666666"
                      android:textSize="@dimen/wwpx34"/>

            <LinearLayout
                android:id="@+id/ll_event_more"
                android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentTop="true">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="更多"
                          android:textColor="@color/color_666666"
                          android:textSize="@dimen/wwpx24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx30"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="@dimen/wwpx40">
            <TextView
                android:id="@+id/event_top_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_page_bg"
                android:gravity="center"
                android:text="暂无大事件相关信息"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/event_top_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/wwpx20"
                android:layout_weight="1"
                android:background="@color/color_page_bg"
                android:gravity="center"
                android:text="暂无大事件相关信息"
                android:textColor="@color/color_666666"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/wwpx383"
                  android:layout_marginTop="@dimen/wwpx20"
                  android:background="@color/color_white"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/wwpx40"
                  android:paddingLeft="@dimen/wwpx20"
                  android:paddingRight="@dimen/wwpx20"
                  android:paddingTop="@dimen/wwpx40">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="活动"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/wwpx34"/>

            <LinearLayout
                android:id="@+id/ll_activity_more"
                android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentTop="true">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="更多"
                          android:textColor="@color/color_666666"
                          android:textSize="@dimen/wwpx24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/wwpx30"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="@dimen/wwpx40">
            <TextView
                android:id="@+id/activity_top_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_page_bg"
                android:gravity="center"
                android:text="暂无活动相关信息"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/activity_top_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/wwpx20"
                android:layout_weight="1"
                android:background="@color/color_page_bg"
                android:gravity="center"
                android:text="暂无活动相关信息"
                android:textColor="@color/color_666666"/>
        </LinearLayout>

    </LinearLayout>

    <!--<ww.com.core.widget.TranslateTabBar-->
