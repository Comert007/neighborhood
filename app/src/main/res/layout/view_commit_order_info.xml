<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                  android:padding="@dimen/wwpx20"
                    android:background="@color/color_white"
                  android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_transport_name"
            android:textColor="@color/color_black"
            android:text="邮费："
            android:textSize="@dimen/wwpx30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_price"
            android:textColor="@color/color_black"
            android:hint="0"
            android:textColorHint="@color/color_black"
            android:textSize="@dimen/wwpx30"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_transport_name"
            android:layout_toLeftOf="@id/tv_price_unit"
            android:inputType="number"
            android:gravity="right"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_price_unit"
            android:textColor="@color/color_black"
            android:text="元"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/wwpx30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:padding="@dimen/wwpx20"
                    android:layout_marginTop="2px"
                    android:background="@color/color_white"
                    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mark_name"
            android:textColor="@color/color_black"
            android:text="买家留言："
            android:textSize="@dimen/wwpx30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_mark"
            android:textColor="@color/color_black"
            android:textSize="@dimen/wwpx30"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_mark_name"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</LinearLayout>