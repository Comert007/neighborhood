<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/wwpx2"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:padding="@dimen/wwpx20"
        android:layout_height="wrap_content">

        <ww.com.core.widget.RoundImageView
            android:id="@+id/riv"
            android:src="@mipmap/ic_default_avatar"
            android:layout_width="@dimen/wwpx90"
            android:layout_height="@dimen/wwpx90"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:paddingLeft="@dimen/wwpx20"
                      android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/color_gray"
                android:layout_width="wrap_content"
                android:textSize="@dimen/wwpx28"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_grade"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:textSize="@dimen/wwpx24"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>